{
  "name": "@better-skills/server",
  "version": "0.1.0",
  "description": "Reference server for hosting skills feeds",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "skills-server": "./dist/cli.js"
  },
