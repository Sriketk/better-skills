{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://better-skills.dev/schemas/subscription.json",
  "title": "Skills Subscription",
  "description": "Agent's subscription configuration for skill feeds",
  "type": "object",
  "required": ["subscriptions"],
  "properties": {
    "subscriptions": {
      "type": "array",
      "description": "List of skill feed subscriptions",
      "items": {
        "$ref": "#/definitions/subscription"
      },
      "minItems": 0
    },
    "cache": {
      "type": "object",
      "description": "Cache configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to cache skill content locally",
          "default": true
        },
        "ttl": {
          "type": "integer",
          "description": "Time-to-live for cached content in seconds",
          "minimum": 0,
          "default": 3600
        },
        "directory": {
          "type": "string",
          "description": "Directory to store cached skills",
          "default": ".skills-cache"
        }
      }
    },
    "fetch": {
      "type": "object",
      "description": "Fetch configuration",
      "properties": {
        "timeout": {
          "type": "integer",
          "description": "Request timeout in milliseconds",
          "minimum": 1000,
          "default": 10000
        },
        "retries": {
          "type": "integer",
          "description": "Number of retry attempts for failed requests",
          "minimum": 0,
          "maximum": 10,
          "default": 3
        },
        "concurrent": {
          "type": "integer",
          "description": "Maximum concurrent fetch requests",
          "minimum": 1,
          "maximum": 20,
          "default": 5
        }
      }
    }
  },
  "definitions": {
    "subscription": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the skill feed (feed.json endpoint)",
          "examples": ["https://skills.vercel.com/feed.json"]
        },
        "name": {
          "type": "string",
          "description": "Optional friendly name for this subscription",
          "maxLength": 100
        },
        "skills": {
          "oneOf": [
            {
              "type": "string",
              "const": "*",
              "description": "Subscribe to all skills in the feed"
            },
            {
              "type": "array",
              "description": "Subscribe to specific skills by ID",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          ],
          "default": "*"
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether this subscription is active",
          "default": true
        },
        "priority": {
          "type": "integer",
          "description": "Priority for conflict resolution (higher = preferred)",
          "minimum": 0,
          "default": 0
        }
      }
    }
  }
}
